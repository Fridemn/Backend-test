# 数据库配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DATABASE=postgres

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# JWT配置
JWT_SECRET_KEY=your_jwt_secret_key_here

# 阿里云短信配置
ALIBABA_CLOUD_ACCESSKEY_ID=your_accesskey_id
ALIBABA_CLOUD_ACCESSKEY_SECRET=your_accesskey_secret
ALIBABA_CLOUD_SIGN_NAME=your_sign_name

# Cookie配置
COOKIE_NAME=auth_token
COOKIE_MAX_AGE=2592000  # 30天，单位秒
COOKIE_SECURE=false     # HTTPS环境设为true
COOKIE_HTTPONLY=true    # 设为true可防止XSS攻击
COOKIE_SAMESITE=lax     # lax, strict, none
COOKIE_DOMAIN=          # 可以设置域名，留空为当前域名
COOKIE_PATH=/           # Cookie路径
